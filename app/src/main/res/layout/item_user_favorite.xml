<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/lay_16"
                android:paddingRight="@dimen/lay_16"
                android:paddingTop="@dimen/lay_16">

    <ImageView
        android:id="@+id/image_avatar"
        android:layout_width="@dimen/size_48"
        android:layout_height="@dimen/size_48"
        android:scaleType="centerCrop" android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true" android:layout_alignParentStart="true"/>
    <TextView
        android:id="@+id/text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/lay_16"
        android:layout_toLeftOf="@+id/button_invite"
        android:layout_toRightOf="@+id/image_avatar"/>

    <Button
        android:id="@+id/button_invite"
        style="@style/LoginButton"
        android:layout_width="@dimen/size_80"
        android:layout_height="@dimen/size_30"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/lay_16"
        android:text="@string/book_send_contact_invitation"
        android:textColor="@color/colorPrimaryDark"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_avatar"
        android:layout_marginTop="@dimen/lay_16"
        android:background="?attr/dividerHorizontal"/>
</RelativeLayout>